<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="contenedorPrincipal" spacing="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.fx10.controlador.DashboardController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>


    <!-- Tabla de productos -->
    <VBox VBox.vgrow="ALWAYS">
        <Label text="List of products ">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCodigo" prefWidth="100" text="Code" />
                <TableColumn fx:id="colNombre" prefWidth="200" text="Name" />
                <TableColumn fx:id="colDescripcion" prefWidth="280" text="Description" />
                <TableColumn fx:id="colPrecio" prefWidth="120" text="Price" />
                <TableColumn fx:id="colStock" prefWidth="100" text="Stock" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
            <Button fx:id="btnEliminar" onAction="#onEliminarProducto" text="Delete product" />
        </HBox>
    </VBox>

</VBox>
