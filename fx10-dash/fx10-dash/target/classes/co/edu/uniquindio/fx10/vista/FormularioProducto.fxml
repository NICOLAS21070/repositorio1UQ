<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.fx10.controlador.FormularioProductoController"
      styleClass="vbox">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Encabezado -->
    <Label text="Create New Product" styleClass="title2"/>

    <!-- Formulario -->
    <VBox spacing="10">

        <GridPane hgap="10" vgap="10">

            <!-- C贸digo -->
            <Label text="Code" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtCodigo" promptText="Ingrese el c贸digo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <!-- Nombre -->
            <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtNombre" promptText="Ingrese el nombre" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- Descripci贸n -->
            <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtDescripcion" promptText="Ingrese la descripci贸n" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Precio -->
            <Label text="Price" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="txtPrecio" promptText="Ingrese el precio" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Stock -->
            <Label text="Stock" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="txtStock" promptText="Ingrese la cantidad en stock" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

        </GridPane>

        <!-- Botones -->
        <HBox alignment="CENTER_RIGHT" spacing="10" >
            <Button fx:id="btnGuardar" text="Save" onAction="#onGuardarProducto"/>
            <Button fx:id="btnCancelar" text="Cancel" onAction="#onCancelar"/>
        </HBox>

    </VBox>
</VBox>
